<!-- language: xml -->
<idea-plugin>
    <id>com.github.prakashgavel.myaichatplugin</id>
    <name>my-aichat</name>
    <vendor>prakashgavel</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="MyToolWindow"
            factoryClass="com.github.prakashgavel.myaichatplugin.toolWindow.MyToolWindowFactory"
            anchor="right"
            icon="/icons/myToolWindow.svg"/>
        <postStartupActivity implementation="com.github.prakashgavel.myaichatplugin.startup.MyProjectActivity"/>
    </extensions>

    <actions>
        <!-- Smart Commit Message Generator action in VCS and Tools menus -->
        <action id="com.github.prakashgavel.myaichatplugin.actions.SmartCommitAction"
                class="com.github.prakashgavel.myaichatplugin.commit.SmartCommitAction"
                text="Generate Smart Commit Message"
                description="Read local Git diff and generate a concise commit message with optional details">
            <add-to-group group-id="ChangesViewPopupMenu" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G" second-keystroke="M"/>
        </action>
        <action id="com.github.prakashgavel.myaichatplugin.actions.BranchScopedGitLogAction"
                class="com.github.prakashgavel.myaichatplugin.gitlog.BranchScopedGitLogAction"
                text="Branch Scoped Git Log"
                description="Show git log for current branch with filters">
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>